<div id="<%= 'mydiv-' + i %>">
  <!-- Blog Post -->
  <div class="card mb-4">
    <img class="card-img-top" src="../../images/<%= articles[i].topic + '-' + articles[i].title %>.jpg" alt="Card image cap">
    <div class="card-body">
      <h2 class="card-title"></h2>
      <p class="card-text"></p>
      <a href="<%= articles[i].topic + '/' + articles[i].title %>" class="btn btn-primary">Read More &rarr;</a>
    </div>
  </div>
</div>

<div id="<%= 'myarticle-' + i %>" style="display: none;">
  <%- articles[i].text %>
</div>
